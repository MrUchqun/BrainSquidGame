<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background_gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/help_icon"
        android:src="@drawable/ic_baseline_help_outline_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/brain_suid_game_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_icon"
        android:layout_marginTop="30dp"
        android:text="Brain Squid Game"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/line1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0.38"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/play_game_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/play_game_2"
        app:cardBackgroundColor="#8291D9"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="45dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="7dp"
            app:cardBackgroundColor="#5E5B5B">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Play Game 1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_baseline_play_circle_outline_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/play_game_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_game_1"
        app:layout_constraintBottom_toTopOf="@id/play_game_3"
        app:cardBackgroundColor="#8291D9"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="45dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="7dp"
            app:cardBackgroundColor="#5E5B5B">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Play Game 2"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_play_circle_outline_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/play_game_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_game_2"
        app:layout_constraintBottom_toTopOf="@id/settings"
        app:cardBackgroundColor="#8291D9"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="45dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="7dp"
            app:cardBackgroundColor="#5E5B5B">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Play Game 3"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_play_circle_outline_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_game_3"
        app:layout_constraintBottom_toTopOf="@id/about_us"
        app:cardBackgroundColor="#8291D9"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="45dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="7dp"
            app:cardBackgroundColor="#5E5B5B">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:text="Settings  "
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_play_circle_outline_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/about_us"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#8291D9"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginHorizontal="45dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingVertical="7dp"
            app:cardBackgroundColor="#5E5B5B">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="right"
                android:text="About us  "
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_play_circle_outline_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>