<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background_gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/help_icon"
                android:src="@drawable/brain_image_one"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:contentDescription="@string/game_iconic_picture" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/brain_suid_game_text"
                android:layout_marginTop="20dp"
                android:text="@string/game_name"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/play_game_1"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/button_color"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:focusable="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#5E5B5B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/game_1_name"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:weightSum="4"
                        app:cardBackgroundColor="#5E5B5B"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:contentDescription="@string/iconic_play" />

                    </LinearLayout>
                </FrameLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/play_game_2"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/button_color"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:focusable="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#5E5B5B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/game_2_name"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:weightSum="4"
                        android:paddingVertical="7dp"
                        app:cardBackgroundColor="#5E5B5B"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:contentDescription="@string/iconic_play" />

                    </LinearLayout>
                </FrameLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/play_game_3"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/button_color"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:focusable="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#5E5B5B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/game_3_name"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:weightSum="4"
                        android:paddingVertical="7dp"
                        app:cardBackgroundColor="#5E5B5B"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:contentDescription="@string/iconic_play" />

                    </LinearLayout>
                </FrameLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/settings"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/button_color"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:focusable="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#5E5B5B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/settings"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:weightSum="4"
                        android:paddingVertical="7dp"
                        app:cardBackgroundColor="#5E5B5B"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:contentDescription="@string/iconic_play" />

                    </LinearLayout>
                </FrameLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/about_us"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/button_color"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:focusable="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:cardBackgroundColor="#5E5B5B">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="@string/about_us"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:weightSum="4"
                        android:paddingVertical="7dp"
                        app:cardBackgroundColor="#5E5B5B"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:contentDescription="@string/iconic_play" />

                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>