<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background_gradient">

    <TextView
        android:id="@+id/first_game_level_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="LEVEL"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/first_game_helth_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/player_health_full" />

    <androidx.cardview.widget.CardView
        android:id="@+id/first_game_assignment_image_view_card"
        android:layout_width="320dp"
        android:layout_height="310dp"
        android:layout_below="@id/first_game_level_txt"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />

                <ImageView
                    android:id="@+id/image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.view.circulartimerview.CircularTimerView
        android:layout_alignBottom="@+id/first_game_assignment_image_view_card"
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:backgroundColor="@color/white"
        app:backgroundWidth="8"
        app:isClockwise="true"
        app:maxValue="100"
        app:prefix=""
        app:progressBackgroundColor="@color/green"
        app:progressColor="@color/white"
        app:progressTextColor="@color/green"
        app:startingPoint="left"
        app:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/first_game_answer_relative_layout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_game_assignment_image_view_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first_game_answer_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pale_red"
                    app:cardCornerRadius="18dp">

                    <TextView
                        android:id="@+id/first_game_answer_1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="80sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:id="@+id/first_game_answer_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pale_red"
                    app:cardCornerRadius="18dp">

                    <TextView
                        android:id="@+id/first_game_answer_2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="80sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first_game_answer_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pale_red"
                    app:cardCornerRadius="18dp">

                    <TextView
                        android:id="@+id/first_game_answer_3_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="80sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:id="@+id/first_game_answer_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pale_red"
                    app:cardCornerRadius="18dp">

                    <TextView
                        android:id="@+id/first_game_answer_4_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="80sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>