<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background_gradient"
    tools:context=".activities.SecondGameActivity">

    <TextView
        android:id="@+id/puzzleText"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Squid Puzzle"
        android:textStyle="bold"
        android:fontFamily="@font/caesar_dressing"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/game3x3"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/puzzleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/button_color">

        <TextView
            android:text="3x3"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/iconic_play"
            android:src="@drawable/ic_baseline_play_circle_outline_24_white"
            tools:ignore="RtlHardcoded" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/game4x4"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/game3x3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/button_color">

        <TextView
            android:text="4x4"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/iconic_play"
            android:src="@drawable/ic_baseline_play_circle_outline_24_white"
            tools:ignore="RtlHardcoded" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/game5x5"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/game4x4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/button_color">

        <TextView
            android:text="5x5"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/iconic_play"
            android:src="@drawable/ic_baseline_play_circle_outline_24_white"
            tools:ignore="RtlHardcoded" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rating_squid_puzzle"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/game5x5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/button_color">

        <TextView
            android:text="Rating"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textSize="27sp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>