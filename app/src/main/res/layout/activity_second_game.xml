<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background_gradient"
    tools:context=".activities.SecondGameActivity">

    <TextView
        android:id="@+id/puzzleText"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Puzzle Game"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/game3x3"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/puzzleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="3x3"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingVertical="10dp"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/game4x4"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/game3x3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="4x4"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingVertical="10dp"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/game5x5"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/game4x4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="5x5"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingVertical="10dp"
            android:textSize="35sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>